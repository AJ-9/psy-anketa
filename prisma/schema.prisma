generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model QuestionnaireResponse {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  startedAt     DateTime
  completedAt   DateTime?
  
  // Демография
  age           String?
  gender        String?
  education     String?
  employment    String?
  relationshipStatus String?
  
  // Ответы (JSON)
  answers       String   // JSON string of Answer[]
  
  // Результаты анализа (JSON)
  analysis      String?  // JSON string of AnalysisResult
  psychologistResult String? // JSON string of PsychologistResult
  patientResult String? // JSON string of PatientResult
  
  // Метаданные
  patientName   String?
  patientEmail  String?
  notes         String?
  
  // Согласие на обработку персональных данных
  personalDataConsent Boolean @default(false)
  consentDate         DateTime?
  
  @@index([createdAt])
  @@index([completedAt])
}

